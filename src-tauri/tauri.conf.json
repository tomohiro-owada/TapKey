{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TapKey",
  "version": "0.1.0",
  "identifier": "com.towada.tapkey",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:52802",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "TapKey - 設定",
        "width": 800,
        "height": 600,
        "visible": true,
        "center": true,
        "resizable": true,
        "decorations": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
